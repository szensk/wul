;one line
(defn max-n (l max) (if (empty? l) (then max) (else (if (> (first l) max) (then (max-n (rem l) (first l))) (else (max-n (rem l) max))))))

;multiline
(defn max-n (l max)
	(if (empty? l)
		(then max)
		(else 
			(if (> (first l) max)
				(then (max-n (rem l) (first l)))
				(else (max-n (rem l) max))
			)
		)
	)
)

(defn maxNumber (list) (max-n list 0))

(maxNumber (6 3 7 0 -4))