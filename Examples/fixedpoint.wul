(defn cos (n) (:: System.Math.Cos n))
(defn abs (n) (:: System.Math.Abs n))

(defn fixed-point (f n precision) 
	(if (= n nil)
		(then (fixed-point f 0 precision))
		(else 
			(let val (f n)
				(do 
					(print "{(debug.name f)}({n}) = {val}")
					(if (< (abs (- val n)) (?? precision 0.001))
						(then n)
						(else (fixed-point f val precision))
					)
				)
			)
		)
	)
)

(print (fixed-point cos precision: 0.1))